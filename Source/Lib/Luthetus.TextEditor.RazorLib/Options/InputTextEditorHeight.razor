@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<div class="bte_text-editor-input-height @TextEditorService.ThemeCssClassString @TopLevelDivElementCssClassString">

    @{
        var globalHeightInPixelsValueIsNull = TextEditorService.OptionsWrap.Value.Options.CommonOptions.FontSizeInPixels
            is null;
    }
    
    <span class="@LabelElementCssClassString">
        Toggle "Specify Text Editor Height Input":&nbsp;
    </span>

    <input type="checkbox"
           class="@CascadingInputElementCssClass @CheckboxElementCssClassString"
           checked="@(!globalHeightInPixelsValueIsNull)"
           @onclick="() => ToggleUseGlobalHeightInPixels(globalHeightInPixelsValueIsNull)"/>

    <div class="bte_child-input">
        <div class="@GetIsDisabledCssClassString(globalHeightInPixelsValueIsNull)"
             style="margin-left: 15px;">

            <span class="@LabelElementCssClassString">
                Height in pixels:&nbsp;
            </span>

            <input type="number"
                   disabled=@globalHeightInPixelsValueIsNull
                   @bind="TextEditorHeight"
                   class="@CascadingInputElementCssClass @InputElementCssClassString"/>
        </div>
    </div>
</div>